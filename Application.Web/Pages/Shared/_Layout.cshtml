@using Microsoft.AspNetCore.Mvc.RazorPages
@using Microsoft.AspNetCore.Mvc.ViewFeatures
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="ar" dir="rtl">

@{
                    Layout = null;
                    var isAuthenticated = User.Identity.IsAuthenticated;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Application</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        body {
            background-color: #f5f6f8;
            font-family: 'Segoe UI', sans-serif;
        }

        .sidebar {
            background-color: #1e1e2d;
            color: #fff;
            min-height: 100vh;
            padding: 1rem;
        }

            .sidebar a {
                color: #ccc;
                display: block;
                margin: 10px 0;
                padding: 10px;
                border-radius: 8px;
                transition: background 0.2s ease;
            }

                .sidebar a:hover,
                .sidebar a.active {
                    background-color: #2e2e40;
                    color: #fff;
                }

        .topbar {
            background-color: #fff;
            padding: 15px 20px;
            border-bottom: 1px solid #dee2e6;
        }

        .content-area {
            padding: 2rem;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">

            <div class="col-md-2 sidebar">
                <h5 class="text-white mb-4">Application</h5>
                @* @if (!isAuthenticated)
                { *@
                <a class="nav-link @(ViewContext.RouteData.Values["page"]?.ToString() == "/Account/Login" ? "active" : "")" asp-page="/Account/Login">
                    <i class="bi bi-box-arrow-in-right"></i>
                    Login
                </a>
                @*  }
                else
                { *@
                <a asp-page="/Dashboard/Index" class="@(Context.Request.Path.Value.Contains("Dashboard") ? "active" : "")">
                    <i class="bi bi-house-door me-1"></i> Dashboard
                </a>

                <a asp-page="/Users/Index" class="@(Context.Request.Path.Value.Contains("Users") ? "active" : "")">
                    <i class="bi bi-people me-1"></i> Users
                </a>

                <a asp-page="/Roles/Index" class="@(Context.Request.Path.Value.Contains("Roles") ? "active" : "")">
                    <i class="bi bi-shield-lock me-1"></i> Roles
                </a>

                <a asp-page="/Tenants/Index" class="@(Context.Request.Path.Value.Contains("Tenants") ? "active" : "")">
                    <i class="bi bi-building me-1"></i> Tenants
                </a>


                <a asp-page="/Account/Logout" class="text-danger">
                    <i class="bi bi-box-arrow-right me-1"></i> LogOut
                </a>
                @* } *@
            </div>


            <div class="col-md-10">
                <div class="topbar">
                    <h4>@ViewData["Title"]</h4>
                </div>
                <div class="content-area">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Application.Web - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
