@page
@model IndexModel
@{
    ViewData["Title"] = "المستخدمين";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>@ViewData["Title"]</h3>
    <a class="btn btn-primary" asp-page="Create">
        <i class="bi bi-plus-circle"></i> إضافة مستخدم
    </a>
</div>

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>#</th>
            <th>اسم المستخدم</th>
            <th>البريد الإلكتروني</th>
            <th>الإجراءات</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Users?.Count > 0)
        {
            int index = 1;
            foreach (var user in Model.Users)
            {
                <tr>
                    <td>@(index++)</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>                    
                    <td>
                        <a class="btn btn-sm btn-secondary" asp-page="Edit" asp-route-id="@user.Id">
                            تعديل
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">لا يوجد مستخدمون</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        console.log("Users page loaded");
    </script>
}

