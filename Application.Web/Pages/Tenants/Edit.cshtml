@page
@model EditModel
@{
    ViewData["Title"] = "تعديل عميل";
}

<h3>@ViewData["Title"]</h3>

<form method="post">
    <div class="mb-3">
        <label class="form-label">اسم العميل</label>
        <input asp-for="Input.Name" class="form-control" />
        <span asp-validation-for="Input.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">سلسلة الاتصال</label>
        <input asp-for="Input.ConnectionString" class="form-control" />
        <span asp-validation-for="Input.ConnectionString" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">تحديث</button>
    <a asp-page="Index" class="btn btn-secondary">عودة</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
