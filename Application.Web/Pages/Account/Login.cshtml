@page
@model LoginModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow rounded-4 border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h3 class="fw-bold text-primary">تسجيل الدخول</h3>
                    </div>
                    <form method="post">
                        <div class="form-group mb-3">
                            <label asp-for="LoginDto.Email" class="form-label">البريد الإلكتروني</label>
                            <input asp-for="LoginDto.Email" class="form-control" placeholder="example@email.com" />
                            <span asp-validation-for="LoginDto.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label asp-for="LoginDto.Password" class="form-label">كلمة المرور</label>
                            <input asp-for="LoginDto.Password" class="form-control" type="password" placeholder="••••••••" />
                            <span asp-validation-for="LoginDto.Password" class="text-danger"></span>
                        </div>
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg rounded-3">دخول</button>
                        </div>
                        <div class="text-center">
                            <a href="#" class="text-muted small">نسيت كلمة المرور؟</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
